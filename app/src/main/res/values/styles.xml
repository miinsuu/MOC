<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/darkGray</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/nanumsquareround_otfr</item>
    </style>

    <!-- Opening theme.   -->
    <style name="OpeningAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/nanumsquareround_otfr</item>
    </style>

    <style name="restaurant_categoryTab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/nanumsquareround_otfb</item>
    </style>

    <style name="menu_reviewTab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="menu_classificationTab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="mylist_fragment_size" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">50%</item>
        <item name="android:windowMinWidthMinor">50%</item>
    </style>

    <style name="mylist_animation">
        <item name="android:windowEnterAnimation">@anim/anim_slide_in_up_with_mylist</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_out_down_with_mylist</item>
    </style>
    <style name="InfoCollapsingToolbarTitleText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="InfoToolbarTitleText" parent="@android:style/TextAppearance">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">#222222</item>
    </style>

    <style name="roulette_relativeLayout">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:layout_marginBottom">20dp</item>
        <item name = "android:orientation">vertical</item>
    </style>
    <style name="roulette_item_imgbtn">
        <item name = "android:layout_width">50dp</item>
        <item name = "android:layout_height">50dp</item>
        <item name = "android:layout_margin">20dp</item>
    </style>
    <style name="roulette_item_txt">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:layout_marginTop">-15dp</item>
        <item name = "android:layout_gravity">center_horizontal</item>
        <item name = "android:textStyle">bold</item>
        <item name = "android:textSize">15dp</item>
    </style>

</resources>
