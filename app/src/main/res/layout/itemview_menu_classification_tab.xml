<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/menuClassificationTab_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/menuClassificationTab_menuName"
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="11dp"
                android:text="TextView"
                android:textColor="#222222"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/menuClassificationTab_menuPrice"
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="15dp"
                android:text="TextView"
                android:textColor="#777777"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/MyListAddBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="false"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="#00FFFFFF"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/clipboard" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#6FE4DBDB" />


</LinearLayout>