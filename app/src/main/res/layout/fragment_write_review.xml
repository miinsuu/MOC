<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WriteReview">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="#00FFFFFF"
                android:src="@drawable/i_arrow_back" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="75dp"
                android:layout_height="27dp"
                android:layout_marginLeft="118.5dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_horizontal"
                android:text="리뷰 쓰기"
                android:textColor="#222222"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button2"
                android:layout_width="30dp"
                android:layout_height="22dp"
                android:layout_marginLeft="98.5dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="15dp"
                android:background="#00FFFFFF"
                android:lineSpacingExtra="6sp"
                android:text="완료"
                android:textColor="#578cdc"
                android:textSize="16sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="70dp"
                android:layout_height="69dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/mainicon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="106dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/restaurantReview_restaurantName_txt"
                    android:layout_width="196dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="7dp"
                    android:lineSpacingExtra="6sp"
                    android:text="TextView\n\n\n\n\ㅎㅎㅎ"
                    android:textColor="#222222"
                    android:textSize="24sp"
                    app:lineHeight="30sp" />

                <TextView
                    android:id="@+id/restaurantReview_restaurantRangePrice_txt"
                    android:layout_width="196dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="4dp"
                    android:text="TextView"
                    android:textColor="#777777"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/restaurantReview_restaurantPreview_txt"
                    android:layout_width="196dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="4dp"
                    android:text="TextView"
                    android:textColor="#777777"
                    android:textSize="12sp" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/menuSelect_spinner"
                android:layout_width="312dp"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp" />

            <Button
                android:id="@+id/reviewPictureAddBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="17dp"
                android:drawableTop="@drawable/i_add_picture"
                android:text="사진" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="48dp"
                android:background="#F2F2F2"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine" />
        </FrameLayout>
    </LinearLayout>

</FrameLayout>