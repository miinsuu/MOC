<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WriteReview">

    <!-- TODO: Update blank fragment layout -->

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_collapseMode="parallax">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="70dp"
                            android:layout_height="69dp"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="11dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/store" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="106dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/writetReview_restaurantName_txt"
                                android:layout_width="196dp"
                                android:layout_height="30dp"
                                android:layout_gravity="left|center_vertical"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="7dp"
                                android:layout_marginRight="58dp"
                                android:fontFamily="@font/nanumsquareround_otfeb"
                                android:lineSpacingExtra="6sp"
                                android:text="TextView"
                                android:textColor="#222222"
                                android:textSize="24sp"
                                app:lineHeight="30sp" />

                            <TextView
                                android:id="@+id/writeReview_restaurantRangePrice_txt"
                                android:layout_width="196dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="58dp"
                                android:lineSpacingExtra="5dp"
                                android:text="TextView"
                                android:textColor="#777777"
                                android:textSize="12sp" />

                            <com.momeokji.moc.CustomView.MarqueeTextView
                                android:id="@+id/writeReview_restaurantPreview_txt"
                                android:layout_width="196dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="4dp"
                                android:ellipsize="marquee"
                                android:focusableInTouchMode="true"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:textSize="12sp" />
                                android:singleLine="true"/>
                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="4dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/writeReviewMenuBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="메뉴 선택" />

                </LinearLayout>

            </LinearLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#FFFFFF"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_collapseMode="pin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/writeReview_back_btn"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginBottom="11dp"
                        android:background="@drawable/back" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="75dp"
                        android:layout_height="27dp"
                        android:layout_marginStart="100dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginEnd="87dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_horizontal"
                        android:text="리뷰 쓰기"
                        android:textColor="#222222"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/writeReview_done_btn"
                        android:layout_width="30dp"
                        android:layout_height="22dp"
                        android:layout_marginLeft="98.5dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginEnd="41dp"
                        android:layout_marginBottom="15dp"
                        android:background="#00FFFFFF"
                        android:lineSpacingExtra="6sp"
                        android:text="완료"
                        android:textColor="#578cdc"
                        android:textSize="16sp" />

                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="리뷰할 메뉴 :  "
                    android:textColor="#777777" />

                <TextView
                    android:id="@+id/menuChoiceText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="16dp"
                    android:textColor="#222222" />
            </LinearLayout>


            <Button
                android:id="@+id/reviewPictureAddBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="5dp"
                android:drawableTop="@drawable/i_add_picture"
                android:text="사진" />
        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/reviewPicture_imageView"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="17dp"
                android:maxHeight="312dp"
                android:src="@android:color/background_light" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/writeReview_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="48dp"
                    android:hint="사진은 한장만 추가 가능합니다."
                    android:padding="20dp"
                    android:background="#F2F2F2"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:minHeight="200dp" />
            </RelativeLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>