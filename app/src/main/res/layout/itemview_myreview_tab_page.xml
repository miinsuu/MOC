<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="7dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="15dp"
        android:background="#6FE4DBDB"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/reviewRestaurantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="reviewRestaurantName"
                android:textSize="18dp"
                android:fontFamily="@font/nanumsquareround_otfeb"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="리뷰"
                android:textSize="18dp"
                android:fontFamily="@font/nanumsquareround_otfb"
                />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/reviewMenuName"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="10dp"
            android:text="reviewMenuName"
            android:fontFamily="@font/nanumsquareround_otfb"
            android:textColor="#D81b60"
            android:textSize="18dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp">
            <Button
                android:id="@+id/myReviewDeleteBtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/delete"/>
        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/reviewNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="4dp"
            android:textSize="14dp"
            android:text="reviewNickName"
            android:textColor="#777777" />

        <TextView
            android:id="@+id/reviewTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="25dp"
            android:textSize="14dp"
            android:text="reviewTime"
            android:textColor="#777777" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/reviewImageView"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:maxWidth="312dp"
        android:maxHeight="312dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="10dp"
         />

    <TextView
        android:id="@+id/reviewText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="10dp"
        android:padding="17dp"
        android:background="@drawable/shop_info"
        android:text="reviewText"
        android:textSize="16dp"
        android:textColor="#222222" />



</LinearLayout>