<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="500dp"
        android:height="200dp"
        android:gravity="bottom|center_horizontal">
        <shape
            android:shape="oval">
            <gradient
                android:angle="315"
                android:type="linear"
                android:startColor="@color/app_color_start"
                android:centerColor="@color/app_color_center"
                android:endColor="@color/app_color_end"/>
        </shape>
    </item>
    <item
        android:height="200dp"
        android:gravity="top">
        <shape
            android:shape="rectangle">
            <gradient
                android:angle="315"
                android:type="linear"
                android:startColor="@color/app_color_start"
                android:centerColor="@color/app_color_center"
                android:endColor="@color/app_color_end"
                android:centerX="0.6"
                android:centerY="0.6"/>
        </shape>
    </item>

</layer-list>